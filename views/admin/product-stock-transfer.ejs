<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar { transition: transform 0.3s ease-in-out; }
        .sidebar.collapsed { transform: translateX(-100%); }
        .main-content { transition: margin-left 0.3s ease-in-out; }
        .main-content.expanded { margin-left: 0; }
        
        .sub-menu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-in-out;
        }
        
        .sub-menu.expanded {
            max-height: 200px;
        }
        
        .menu-item.has-submenu .chevron {
            transition: transform 0.3s ease-in-out;
        }
        
        .menu-item.has-submenu.expanded .chevron {
            transform: rotate(180deg);
        }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 fixed top-0 left-0 right-0 z-50">
        <div class="flex items-center justify-between px-6 py-4">
            <div class="flex items-center">
                <button id="sidebarToggle" class="text-gray-500 hover:text-gray-700 mr-4">
                    <i class="fas fa-bars text-xl"></i>
                </button>
                <h1 class="text-2xl font-bold text-gray-900"><%= title %></h1>
            </div>
            <div class="flex items-center space-x-4">
                <a href="/admin/dashboard" class="text-gray-600 hover:text-gray-900">
                    <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
                </a>
                <a href="/admin/logout" class="text-red-600 hover:text-red-800">
                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                </a>
            </div>
        </div>
    </header>

    <!-- Sidebar -->
    <aside id="sidebar" class="sidebar fixed top-16 left-0 h-full w-64 bg-white shadow-lg z-40">
        <nav class="mt-8">
            <div class="px-4 py-2">
                <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Management</h3>
            </div>
            <% if (typeof routes !== 'undefined' && routes.length > 0) { %>
                <% routes.forEach(route => { %>
                    <div class="menu-item <%= route.subMenus && route.subMenus.length > 0 ? 'has-submenu' : '' %>">
                        <a href="<%= route.path %>" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 hover:text-gray-900 <%= route.path === '/admin/products' ? 'bg-blue-50 text-blue-700' : '' %>" 
                           <% if (route.subMenus && route.subMenus.length > 0) { %>onclick="toggleSubMenu(event, this)"<% } %>>
                            <i class="<%= route.icon %> mr-3"></i>
                            <span><%= route.name %></span>
                            <% if (route.subMenus && route.subMenus.length > 0) { %>
                                <i class="fas fa-chevron-down ml-auto text-xs chevron"></i>
                            <% } %>
                        </a>
                        <% if (route.subMenus && route.subMenus.length > 0) { %>
                            <div class="sub-menu ml-4">
                                <% route.subMenus.forEach(subMenu => { %>
                                    <a href="<%= subMenu.path %>" class="flex items-center px-4 py-2 text-sm text-gray-600 hover:bg-gray-50 hover:text-gray-800">
                                        <i class="<%= subMenu.icon %> mr-2 text-xs"></i>
                                        <span><%= subMenu.name %></span>
                                    </a>
                                <% }); %>
                            </div>
                        <% } %>
                    </div>
                <% }); %>
            <% } else { %>
                <a href="/admin/users" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 hover:text-gray-900">
                    <i class="fas fa-users mr-3"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/products" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 hover:text-gray-900">
                    <i class="fas fa-box mr-3"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/blogs" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 hover:text-gray-900">
                    <i class="fas fa-blog mr-3"></i>
                    <span>Blogs</span>
                </a>
                <a href="/admin/orders" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 hover:text-gray-900">
                    <i class="fas fa-shopping-cart mr-3"></i>
                    <span>Orders</span>
                </a>
                <a href="/admin/categories" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 hover:text-gray-900">
                    <i class="fas fa-tags mr-3"></i>
                    <span>Categories</span>
                </a>
                <a href="/admin/complain" class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-100 hover:text-gray-900">
                    <i class="fas fa-exclamation-triangle mr-3"></i>
                    <span>Complaints</span>
                </a>
            <% } %>
        </nav>
    </aside>

    <!-- Main Content -->
    <main id="mainContent" class="main-content ml-64 mt-16 p-6">
        <!-- Flash Messages -->
        <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                <%= success %>
            </div>
        <% } %>
        <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                <%= error %>
            </div>
        <% } %>

        <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
            <div>
                <h2 class="text-3xl font-bold text-gray-900"><%= title %></h2>
                <p class="text-gray-600">Transfer stock between warehouses for your products.</p>
            </div>
            <div class="flex items-center gap-3">
                <a href="/admin/<%= modelName %>" class="bg-white border border-gray-300 text-gray-700 hover:text-gray-900 hover:border-gray-400 px-5 py-2.5 rounded-lg font-medium transition duration-200">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Products
                </a>
            </div>
        </div>

        <% if (customTabs && customTabs.length > 0) { %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
            <nav class="flex flex-wrap">
                <a href="/admin/<%= modelName %>" class="px-5 py-3 text-sm font-medium border-b-2 transition duration-150 <%= (!customTabsActivePath || customTabsActivePath === '/admin/' + modelName) ? "border-blue-500 text-blue-600 bg-blue-50" : "border-transparent text-gray-500 hover:text-gray-700 hover:bg-gray-50" %>">
                    <i class="fas fa-table mr-2 text-xs"></i>
                    <span>List</span>
                </a>
                <% customTabs.forEach(tab => { %>
                    <a href="<%= tab.path %>" class="px-5 py-3 text-sm font-medium border-b-2 transition duration-150 flex items-center gap-2 <%= (typeof customTabsActivePath !== 'undefined' && customTabsActivePath === tab.path) ? "border-blue-500 text-blue-600 bg-blue-50" : "border-transparent text-gray-500 hover:text-gray-700 hover:bg-gray-50" %>">
                        <% if (tab.icon) { %>
                            <i class="<%= tab.icon %> text-xs"></i>
                        <% } else { %>
                            <i class="fas fa-layer-group text-xs"></i>
                        <% } %>
                        <span><%= tab.name %></span>
                    </a>
                <% }); %>
            </nav>
        </div>
        <% } %>

        <!-- Transfer Form -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <i class="fas fa-exchange-alt text-blue-600"></i>
                Stock Transfer Details
            </h3>
            <form method="POST" action="/admin/products/stock-transfer" class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label for="product_id" class="text-sm font-medium text-gray-700">Product</label>
                    <select id="product_id" name="product_id" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Select a product</option>
                        <% products.forEach(product => { %>
                            <option value="<%= product._id %>" <%= formDefaults.product_id === product._id ? 'selected' : '' %>>
                                <%= product.product_name %>
                                <% if (product.product_code) { %> (<%= product.product_code %>) <% } %>
                            </option>
                        <% }); %>
                    </select>
                </div>

                <div class="space-y-2">
                    <label for="quantity" class="text-sm font-medium text-gray-700">Quantity</label>
                    <input type="number" id="quantity" name="quantity" required min="1" value="<%= formDefaults.quantity %>" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <p id="availableQuantityHelp" class="text-xs text-gray-500">Select a product to view available quantities.</p>
                </div>

                <div class="space-y-2">
                    <label for="from_warehouse_id" class="text-sm font-medium text-gray-700">From Warehouse</label>
                    <select id="from_warehouse_id" name="from_warehouse_id" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Select source warehouse</option>
                        <% warehouses.forEach(warehouse => { %>
                            <option value="<%= warehouse._id %>" <%= formDefaults.from_warehouse_id === warehouse._id ? 'selected' : '' %>><%= warehouse.warehouse_name %></option>
                        <% }); %>
                    </select>
                    <p id="sourceQuantityHelper" class="text-xs text-gray-500 hidden">Available: <span id="sourceQuantityValue">0</span></p>
                </div>

                <div class="space-y-2">
                    <label for="to_warehouse_id" class="text-sm font-medium text-gray-700">To Warehouse</label>
                    <select id="to_warehouse_id" name="to_warehouse_id" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Select destination warehouse</option>
                        <% warehouses.forEach(warehouse => { %>
                            <option value="<%= warehouse._id %>" <%= formDefaults.to_warehouse_id === warehouse._id ? 'selected' : '' %>><%= warehouse.warehouse_name %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="md:col-span-2 space-y-2">
                    <label for="notes" class="text-sm font-medium text-gray-700">Notes (optional)</label>
                    <textarea id="notes" name="notes" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Add any additional information about this transfer..."><%= formDefaults.notes %></textarea>
                </div>

                <div class="md:col-span-2 flex justify-end">
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition duration-200 flex items-center gap-2">
                        <i class="fas fa-paper-plane"></i>
                        Submit Transfer
                    </button>
                </div>
            </form>
        </div>

        <!-- Inventory Summary -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                    <i class="fas fa-warehouse text-blue-600"></i>
                    Current Inventory Breakdown
                </h3>
                <span id="totalProductQuantity" class="text-sm text-gray-500 hidden"></span>
            </div>
            <div id="inventoryTableWrapper" class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Warehouse</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Updated</th>
                        </tr>
                    </thead>
                    <tbody id="inventoryTableBody" class="bg-white divide-y divide-gray-200">
                        <tr>
                            <td colspan="3" class="px-6 py-4 text-center text-sm text-gray-500">
                                Select a product to view warehouse inventory data.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Recent Transfers -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                    <i class="fas fa-history text-blue-600"></i>
                    Recent Transfers
                </h3>
            </div>
            <% if (recentTransfers && recentTransfers.length > 0) { %>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reference</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">From</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">To</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% recentTransfers.forEach(transfer => { %>
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        <span class="font-semibold"><%= transfer.reference_code || '—' %></span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        <div class="flex flex-col">
                                            <span><%= transfer.product_id && transfer.product_id.product_name ? transfer.product_id.product_name : 'Unknown Product' %></span>
                                            <% if (transfer.product_id && transfer.product_id.product_code) { %>
                                                <span class="text-xs text-gray-500">Code: <%= transfer.product_id.product_code %></span>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        <%= transfer.from_warehouse_id && transfer.from_warehouse_id.warehouse_name ? transfer.from_warehouse_id.warehouse_name : 'Unknown' %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        <%= transfer.to_warehouse_id && transfer.to_warehouse_id.warehouse_name ? transfer.to_warehouse_id.warehouse_name : 'Unknown' %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            <%= transfer.quantity %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= transfer.transfer_status === 'Completed' ? 'bg-green-100 text-green-800' : (transfer.transfer_status === 'Pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') %>">
                                            <%= transfer.transfer_status %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <%= transfer.transfer_date ? new Date(transfer.transfer_date).toLocaleString() : '—' %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-12 text-gray-500">
                    <i class="fas fa-clipboard-list text-4xl mb-4 text-gray-300"></i>
                    <p class="text-lg font-medium">No transfers recorded yet</p>
                    <p class="text-sm">Transfers you create will appear here for quick reference.</p>
                </div>
            <% } %>
        </div>
    </main>

    <script>
        // Sidebar toggle
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const sidebarToggle = document.getElementById('sidebarToggle');
        
        sidebarToggle.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');
        });

        // Sub-menu toggle functionality
        function toggleSubMenu(event, element) {
            event.preventDefault();
            const menuItem = element.closest('.menu-item');
            const subMenu = menuItem.querySelector('.sub-menu');
            
            if (subMenu) {
                const isExpanded = menuItem.classList.contains('expanded');
                
                if (isExpanded) {
                    menuItem.classList.remove('expanded');
                    subMenu.classList.remove('expanded');
                } else {
                    menuItem.classList.add('expanded');
                    subMenu.classList.add('expanded');
                }
            }
        }

        // Inventory helpers
        const productInventoryMap = <%- JSON.stringify(productInventoryMap || {}) %>;
        const warehouses = <%- JSON.stringify(warehouses || []) %>;

        const productSelect = document.getElementById('product_id');
        const fromWarehouseSelect = document.getElementById('from_warehouse_id');
        const toWarehouseSelect = document.getElementById('to_warehouse_id');
        const sourceQuantityHelper = document.getElementById('sourceQuantityHelper');
        const sourceQuantityValue = document.getElementById('sourceQuantityValue');
        const availableQuantityHelp = document.getElementById('availableQuantityHelp');
        const totalProductQuantity = document.getElementById('totalProductQuantity');
        const inventoryTableBody = document.getElementById('inventoryTableBody');

        function buildWarehouseOption(warehouse, quantity) {
            const option = document.createElement('option');
            option.value = warehouse._id;
            option.textContent = warehouse.warehouse_name + (typeof quantity === 'number' ? ` (Qty: ${quantity})` : '');
            if (quantity !== undefined && quantity <= 0) {
                option.disabled = true;
            }
            return option;
        }

        function populateWarehouseSelects(productId) {
            const inventory = productInventoryMap[productId] || [];
            const inventoryById = {};
            inventory.forEach(entry => {
                inventoryById[entry.warehouse_id] = entry;
            });

            // Reset selects
            [fromWarehouseSelect, toWarehouseSelect].forEach(select => {
                const currentValue = select.value;
                select.innerHTML = '';
                const defaultOption = document.createElement('option');
                defaultOption.value = '';
                defaultOption.textContent = select === fromWarehouseSelect ? 'Select source warehouse' : 'Select destination warehouse';
                select.appendChild(defaultOption);

                warehouses.forEach(warehouse => {
                    const entry = inventoryById[warehouse._id];
                    const option = buildWarehouseOption(
                        warehouse,
                        select === fromWarehouseSelect ? (entry ? entry.quantity : 0) : undefined
                    );
                    if (currentValue && currentValue === warehouse._id) {
                        option.selected = true;
                    }
                    select.appendChild(option);
                });
            });
        }

        function updateInventoryTable(productId) {
            const inventory = productInventoryMap[productId] || [];

            inventoryTableBody.innerHTML = '';

            if (inventory.length === 0) {
                const emptyRow = document.createElement('tr');
                emptyRow.innerHTML = `
                    <td colspan="3" class="px-6 py-4 text-center text-sm text-gray-500">
                        No inventory data available for the selected product.
                    </td>
                `;
                inventoryTableBody.appendChild(emptyRow);
                totalProductQuantity.classList.add('hidden');
                return;
            }

            let totalQuantity = 0;
            inventory.forEach(entry => {
                totalQuantity += entry.quantity || 0;
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${entry.warehouse_name || 'Unknown Warehouse'}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${entry.quantity > 0 ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-500'}">
                            ${entry.quantity || 0}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        ${entry.last_updated ? new Date(entry.last_updated).toLocaleString() : '—'}
                    </td>
                `;
                inventoryTableBody.appendChild(row);
            });

            totalProductQuantity.textContent = `Total quantity across warehouses: ${totalQuantity}`;
            totalProductQuantity.classList.remove('hidden');
        }

        function updateSourceQuantity(productId, warehouseId) {
            const inventory = productInventoryMap[productId] || [];
            const entry = inventory.find(item => item.warehouse_id === warehouseId);
            if (entry) {
                sourceQuantityValue.textContent = entry.quantity || 0;
                sourceQuantityHelper.classList.remove('hidden');
            } else {
                sourceQuantityHelper.classList.add('hidden');
            }
        }

        productSelect.addEventListener('change', () => {
            const selectedProduct = productSelect.value;
            if (!selectedProduct) {
                availableQuantityHelp.textContent = 'Select a product to view available quantities.';
                availableQuantityHelp.classList.remove('text-green-600');
                populateWarehouseSelects('');
                updateInventoryTable('');
                sourceQuantityHelper.classList.add('hidden');
                return;
            }

            availableQuantityHelp.textContent = 'Quantities refreshed for selected product.';
            availableQuantityHelp.classList.add('text-green-600');
            populateWarehouseSelects(selectedProduct);
            updateInventoryTable(selectedProduct);
            updateSourceQuantity(selectedProduct, fromWarehouseSelect.value);
        });

        fromWarehouseSelect.addEventListener('change', () => {
            const productId = productSelect.value;
            if (!productId) return;

            updateSourceQuantity(productId, fromWarehouseSelect.value);

            // Prevent selecting the same warehouse as destination
            const fromValue = fromWarehouseSelect.value;
            Array.from(toWarehouseSelect.options).forEach(option => {
                if (!option.value) return;
                option.disabled = option.value === fromValue;
            });
            if (toWarehouseSelect.value === fromValue) {
                toWarehouseSelect.value = '';
            }
        });

        // Initialize selects and table based on defaults
        if (productSelect.value) {
            populateWarehouseSelects(productSelect.value);
            updateInventoryTable(productSelect.value);
            updateSourceQuantity(productSelect.value, fromWarehouseSelect.value);
            if (fromWarehouseSelect.value) {
                const event = new Event('change');
                fromWarehouseSelect.dispatchEvent(event);
            }
        }
    </script>
</body>
</html>

